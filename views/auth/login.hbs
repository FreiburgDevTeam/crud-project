<section class="container-box">
  <div class="box">
    <h1>Log in</h1><br>
    <p> Enjoy the pet lovers community.<br>
      Share your pet or find you next best friend near to you.</p>
    <br>
    <form action="/auth/login" method="POST">
      {{#if errorMessage}}
      <br />
      <p id="message-negative">{{errorMessage}}</p>
      <br />
      {{/if}}
      <label for="email">Email:</label><br />
      <input type="email" name="email" id="email" placeholder="email@mail.com" required /><br />
      <label for="password">Password:</label><br />
      <input type="password" name="password" id="password" placeholder="********" required /><br />
      <button type="submit">SUBMIT</button>
      <a href="/auth/signup">SignUp</a>
      <a href="/pets">Continue as a guest</a>
    </form>
  </div>
</section>