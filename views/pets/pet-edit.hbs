
<h2>Edit {{name}}</h2>

<form action="/pets/{{_id}}/edit" method="POST">
  <label> Name:
    <input type="text" name="name" value="{{name}}" />
  </label>

    <p>Type: {{type}}</p>

  <label> Breed:
    <input type="text" name="breed" value="{{breed}}" /> <br>
  </label>

  <label> Country:
    <input type="text" name="country" value="{{country}}" /> <br>
  </label>

  <label> Gender:
    <input type="text" name="gender" value="{{gender}}" /> <br>
  </label>

   imageFile: -- <br>
   
  <label> Favourite Food:
    <input type="text" name="favouriteFood" value="{{favouriteFood}}" /> <br>
  </label>

   <label> Description: <br>
    <textarea type="text" name="description" cols="40" rows="8" minlength="30"> {{description}}
    </textarea>
  </label><br>

  <button>Save changes</button>
</form>
