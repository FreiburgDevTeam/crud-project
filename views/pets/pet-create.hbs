<h2>Post a Pet</h2>

<form action="/pets/create" method="POST">

  <label>
    Name:
    <input type="text" name="name" required />
    <br/>
  </label>

  <label>
    Type:
    <select name="type">
      <option value="dog">Dog</option>
      <option value="cat">Cat</option>
    </select>
  </label>
  <br/>

  <label>
    Breed:
    <input type="text" name="breed" required />
    <br/>
  </label>

  <label>
    City:
    <input type="text" name="city" required />
    <br />
  </label>

  <label>
    Gender:
    <select name="gender">
      <option value="male">Male</option>
      <option value="female">Female</option> 
    </select>
  </label>

 
      {{#each user}}
    <p> Owner: {{name}}</p>
 
{{/each}}
<br>
  <label>
    Favourite Food:
    <input type="text" name="favouriteFood" required />
    <br/>
  </label>

  <label> Description: <br>
    <textarea name="description" cols="40" rows="8" minlength="20" maxlength="50"> </textarea>
  </label><br>

  <button type="submit"> Create </button>
</form>